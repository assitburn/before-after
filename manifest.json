{
  "id": "vorher.nachher.theme",
  
  "name": {
    "default": "Before-After",
    "de": "Vorher-Nachher"
  },  
  "version": "1.2.9",
  "manifestVersion": 5,
  "main": "index.html",
  "host": [
    {
      "app": "PS",
      "minVersion": "23.0.0",
        "data": {
          "apiVersion": 2
        }
    }
  ],
  "requiredPermissions": {
		"clipboard": "readAndWrite",
		"launchProcess": "request"
	},
  
  "entrypoints": [
    {
      "type": "panel",
      "id": "vanilla",
      "label": {
        "default": "Before-After",
        "de": "Vorher-Nachher"
      },  
      "minimumSize": {
        "width": 300,
        "height": 570
      },
      "maximumSize": {
        "width": 300,
        "height": 570
      },
      "preferredDockedSize": {
        "width": 300,
        "height": 570
      },
      "preferredFloatingSize": {
        "width": 300,
        "height": 570
      },
      
      "icons": [
        {
      "width": 23,
      "height": 23,
      "path": "icons/dark.png",
      "scale": [
        1,
        2
      ],
      "theme": [
        "darkest",
        "dark",
        "medium"
     ]
    },
    {
      "width": 23,
      "height": 23,
      "path": "icons/light.png",
      "scale": [
        1,
        2
      ],
      "theme": [
        "lightest",
        "light"          
      ]
        }
      ]
    }
  ],
  "icons": [{
    "width": 48,
    "height": 48,
    "path": "icons/plugin-dark.png",
    "scale": [1, 2],
    "theme": ["darkest", "dark", "medium"],
    "species": [ "pluginList" ]
  }, {
    "width": 48,
    "height": 48,
    "path": "icons/plugin.png",
    "scale": [1, 2],
    "theme": ["lightest", "light"],
    "species": [ "pluginList" ]
  },
  { "width": 23, "height": 23, "path": "icons/plugin.png", "scale": [ 1, 2 ], "theme": [ "dark", "darkest" ], "species": [ "generic" ] },

  { "width": 23, "height": 23, "path": "icons/plugin.png", "scale": [ 1, 2 ], "theme": [ "lightest", "light" ], "species": [ "generic" ] }
]

}
